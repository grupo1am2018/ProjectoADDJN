<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginfundo"
    tools:context=".RegistarUser.registarUser">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textRegistar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registar_utilizador"
            android:textAlignment="center"
            android:paddingBottom="40dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35dp"/>

        <EditText
            android:id="@+id/edtNomedeUtilizador"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Nuno Antunes"
            android:textColor="#0c4076"
            android:inputType="textPersonName"
            android:hint="@string/nome_de_utilizador" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="a15352@alunos.ipca.pt"
            android:textColor="#0c4076"
            android:inputType="textPersonName"
            android:hint="@string/email" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#0c4076"
            android:inputType="textPassword"
            android:hint="@string/password" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="35dp">

            <Button
                android:id="@+id/btnRegistar"
                android:onClick="btnRegistar"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#c6363c"
                android:text="Registar"
                android:textColor="#edb92e"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>